<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:gravity="bottom|center"
    android:orientation="vertical"
    tools:context=".ExportDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLogoGrueneSchleife2"
            android:layout_width="0dp"
            android:layout_height="100sp"
            android:layout_weight="0.2"
            tools:srcCompat="@drawable/logo_gruene_schleife" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            tools:srcCompat="@drawable/logo_gruene_schleife" />

        <ImageButton
            android:id="@+id/btnIconHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:maxWidth="40sp"
            android:maxHeight="40sp"
            android:scaleType="fitCenter"
            android:src="@drawable/startseite_icon" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivLogoGrueneSchleife"
        android:layout_width="198dp"
        android:layout_height="182dp"
        android:layout_weight="1"
        tools:srcCompat="@drawable/logo_gruene_schleife" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnExportData"
            android:background="@drawable/fixed_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:text="@string/text_button_export_data"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteGuests"
            android:background="@drawable/fixed_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:text="@string/text_button_lÃ¶schen"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

</LinearLayout>