<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".SettingsActivity">


    <ImageView
        android:id="@+id/ivLogoGrueneSchleife"
        android:layout_width="198dp"
        android:layout_height="182dp"
        tools:srcCompat="@drawable/logo_gruene_schleife" />

    <Button
        android:id="@+id/btnHueWa"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="@color/gruene_schleife"
        android:text="@string/text_button_home"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPickFromFiles"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gruene_schleife"
            android:text="@string/text_button_Pick_From_Files"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnHint"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:backgroundTint="@color/gruene_schleife"
            android:text="@string/text_button_export_data"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:visibility="invisible" />

</LinearLayout>