<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".SettingsActivity">


    <ImageView
        android:id="@+id/ivLogoGrueneSchleife"
        android:layout_width="198dp"
        android:layout_height="182dp"
        tools:srcCompat="@drawable/logo_gruene_schleife" />

    <Button
        android:id="@+id/btnHueWa"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="300dp"
        android:backgroundTint="@color/gruene_schleife"
        android:text="@string/text_button_home"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPickFromFiles"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="300dp"
        android:text="@string/text_button_Pick_From_Files"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/btnHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_button_export_data" />

    <TextView
        android:id="@+id/tvHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/edText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Hier kÃ¶nnte Ihre Werbung stehen."
        android:textAlignment="center" />
</LinearLayout>